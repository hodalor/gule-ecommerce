# Production Environment Variables for Gule Client App

# Backend API URL - Update this with your actual backend URL
REACT_APP_API_URL=http://localhost:8000/api

# Client App Configuration
REACT_APP_APP_NAME=Gule Marketplace
REACT_APP_VERSION=1.0.0
REACT_APP_SITE_URL=https://ecommercezm.netlify.app

# Build Configuration
NODE_ENV=production
GENERATE_SOURCEMAP=false
CI=false

# Payment Configuration (Update with your actual keys)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_key_here
REACT_APP_PAYPAL_CLIENT_ID=your_paypal_client_id_here

# Social Media Integration
REACT_APP_FACEBOOK_APP_ID=your_facebook_app_id
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id

# Analytics and Tracking
REACT_APP_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
REACT_APP_ENABLE_ANALYTICS=true

# Feature Flags
REACT_APP_ENABLE_CHAT_SUPPORT=true
REACT_APP_ENABLE_REVIEWS=true
REACT_APP_ENABLE_WISHLIST=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# Security Settings
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_SESSION_TIMEOUT=1800000